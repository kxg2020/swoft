{
    "name": "swoft/http-client",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "http-client",
        "http",
        "client"
    ],
    "description": "HTTP Client Component for Swoft",
    "license": "Apache-2.0",
    "require": {
        "swoft/http-message": "^1.0",
        "swoft/framework": "^1.0"
    },
    "require-dev": {
        "swoft/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\HttpClient\\": "test/Cases"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.laravel-china.org"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
